<section class="content">
    <div class="container-fluid">
        <!-- Counter Examples -->
        <div class="block-header">
            <h1>
                අංශයන්
            </h1>
            <hr>
            <div class="icon-and-text-button-demo">
                <button type="button" class="btn btn-success waves-effect btn-lg" onclick="location.href = '/sections/addSection';">
                    <!--<i class="material-icons">home</i>-->
                    <span>නව අංශයක් එකතු කිරීමට </span>
                </button>
            </div>
        </div>
        <div class="row">

            {{#each sections}}

                    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                        <a href="sections/{{this.section_name}}/{{this.section_id}}">
                            <div class="info-box-4 hover-expand-effect">
                                <div class="icon">

                                    <i class="material-icons col-purple">account_balance</i>
                                </div>
                                <div class="content">
                                    <div class="number">{{this.section_name}}</div>
                                    <div class="text">{{this.section_id}}</div>

                                </div>
                            </div></a>
                    </div>
            {{/each}}
        </div>
    </div>
</section>